{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Charl",
  "scopeName": "source.charl",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#types"
    },
    {
      "include": "#functions"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#constants"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.charl",
          "match": "//.*$"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.charl",
          "match": "\\b(if|else|while|for|in|return|break|continue|match)\\b"
        },
        {
          "name": "keyword.other.charl",
          "match": "\\b(let|fn|const)\\b"
        },
        {
          "name": "keyword.operator.logical.charl",
          "match": "\\b(and|or|not)\\b"
        },
        {
          "name": "keyword.ml.charl",
          "match": "\\b(model|layer|layers|autograd|gradient|dense|conv2d|activation|dropout|relu|sigmoid|tanh|softmax|tensor)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.primitive.charl",
          "match": "\\b(int32|int64|float32|float64|bool|string)\\b"
        },
        {
          "name": "storage.type.charl",
          "match": "\\b(tensor)\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "meta.function.charl",
          "begin": "\\b(fn)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
          "beginCaptures": {
            "1": {
              "name": "keyword.other.fn.charl"
            },
            "2": {
              "name": "entity.name.function.charl"
            }
          },
          "end": "\\{",
          "patterns": [
            {
              "include": "#function-parameters"
            },
            {
              "include": "#types"
            }
          ]
        },
        {
          "name": "meta.function.call.charl",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
          "captures": {
            "1": {
              "name": "entity.name.function.charl"
            }
          }
        }
      ]
    },
    "function-parameters": {
      "patterns": [
        {
          "name": "variable.parameter.charl",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b(?=\\s*:)"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.charl",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.charl",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.charl",
          "match": "\\b\\d+\\.\\d+\\b"
        },
        {
          "name": "constant.numeric.integer.charl",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arithmetic.charl",
          "match": "\\+|\\-|\\*|\\/|%|@"
        },
        {
          "name": "keyword.operator.comparison.charl",
          "match": "==|!=|<=|>=|<|>"
        },
        {
          "name": "keyword.operator.assignment.charl",
          "match": "=(?!=)"
        },
        {
          "name": "keyword.operator.arrow.charl",
          "match": "->|=>"
        },
        {
          "name": "keyword.operator.range.charl",
          "match": "\\.\\.=?|\\."
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.charl",
          "match": "\\b(true|false)\\b"
        },
        {
          "name": "constant.language.null.charl",
          "match": "\\bnull\\b"
        },
        {
          "name": "variable.other.constant.charl",
          "match": "\\b[A-Z][A-Z0-9_]*\\b"
        }
      ]
    }
  }
}
