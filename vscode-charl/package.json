{
  "name": "charl",
  "displayName": "Charl Language Support",
  "description": "Syntax highlighting, snippets, and language support for Charl programming language",
  "version": "1.0.0",
  "publisher": "charl-lang",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/charlcoding-stack/vscode-charl"
  },
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "keywords": [
    "charl",
    "ml",
    "machine learning",
    "ai",
    "tensor"
  ],
  "contributes": {
    "languages": [
      {
        "id": "charl",
        "aliases": [
          "Charl",
          "charl"
        ],
        "extensions": [
          ".ch"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icon.png",
          "dark": "./icon.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "charl",
        "scopeName": "source.charl",
        "path": "./syntaxes/charl.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "charl",
        "path": "./snippets/charl.json"
      }
    ]
  },
  "scripts": {
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.70.0"
  }
}
